<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="?attr/actionBarSize"
    app:cardCornerRadius="5dp"
    app:cardElevation="@dimen/extra_small"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/medium"
        android:paddingVertical="@dimen/medium">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTittle"
            android:text="Title"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0"
            android:fontFamily="@font/raleway_bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvPrice"
            app:layout_constraintBottom_toTopOf="@id/tvContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            android:text="10$"
            android:textSize="14sp"
            android:fontFamily="@font/raleway_semibold"
            android:background="#CF8C28"
            app:layout_constraintStart_toEndOf="@id/tvTittle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/small"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent"
            android:text="Content"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tvLastUpdate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPrice"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLastUpdate"
            android:text="Last Update:"
            android:textSize="12sp"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvContent"
            app:layout_constraintEnd_toStartOf="@id/tvCount"
            android:layout_width="0dp"
            android:fontFamily="@font/raleway_extrabold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCount"
            android:text="Word: 5"
            android:textSize="12sp"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintStart_toEndOf="@id/tvLastUpdate"
            app:layout_constraintTop_toBottomOf="@id/tvContent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:fontFamily="@font/raleway_extrabold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>